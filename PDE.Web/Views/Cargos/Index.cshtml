@model IEnumerable<PDE.Models.Entities.Cargo>

@{

}

<h1 class="mt-4"></h1>

<div class="card mb-4">
    <div class="card-header" style="background-color:#25a04d">
        <div class="row text-white">
            <div class="col-11">
                <i class="fas fa-table me-1"></i>
                Cargos
            </div>

            <div class="col-1 float-sm-end">
                <a asp-action="Create" rel="Agregar Cargos" ><i class="fas fa-plus fs-12" style="color:white"></i></a>
            </div>
        </div>
     
    </div>
    <div class="card-body">
        <table id="dataTable" class="table" >
            <thead>
                <tr>
                    <th>
                        Descripción
                    </th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>
                        Descripción
                    </th>
                    <th></th>
                    <th></th>
                </tr>
            </tfoot>
            <tbody>
                @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id"><i class="fa-solid fa-pencil"></i></a>                         
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.Id"><i class="fa-solid fa-trash-can"></i></a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>