@model IEnumerable<PDE.Models.Entities.Miembro>

@{
   
}

<h1 class="mt-4"></h1>

<div class="card mb-4">
    <div class="card-header row">
        <div class="col-11">
            <i class="fas fa-table me-1"></i>
            Miembros
        </div>

        <div class="col-1 align-right">
            <a asp-action="Create" rel="Agregar Miembro" ><i class="fas fa-plus fs-6"></i></a>
        </div>
        
    </div>
    <div class="card-body">
        <table id="dataTable" class="table table-bordered">
            <thead>
                <tr>
                    <th>Nombres</th>
                    <th>Apellidos</th>
                    <th>Cedula</th>
                    <th>Celular</th>
                    <th>Cargo</th>
                    <th>Supervisor</th>
                    <th></th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>Nombres</th>
                    <th>Apellidos</th>
                    <th>Cedula</th>
                    <th>Celular</th>
                    <th>Cargo</th>
                    <th>Supervisor</th>
                    <th></th>
                </tr>
            </tfoot>
            <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.Nombres
            </td>
            <td>
                @item.Apellidos
            </td>
            <td>
                @item.Cedula
            </td>
            <td>
                @item.Celular
            </td>
            <td>
                @item.Cargo.Descripcion
            </td>
            <td>
                @(item.Supervisor.Nombres +" "+ item.Supervisor.Apellidos)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id"><i class="fa-solid fa-pencil"></i></a> 
            </td>
        </tr>
}
            </tbody>
        </table>
    </div>
</div>