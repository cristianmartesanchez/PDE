    <body class="bg-primary" cz-shortcut-listen="true">
            <div id="layoutAuthentication">
      <div id="layoutAuthentication_content">
        <main>
          <!-- UIkit CSS -->
          <div class="xx-login-background">
            <div class="uk-container uk-container-center">
              <div class="uk-width-1-1">
                <div class="uk-card xx-login-card uk-card-default uk-align-center uk-card-body uk-width-1-3@m">
                  <div class="xx-xxxx-logo"></div>
                  <form asp-action="Login" id="login-form">                   
                    <div class="uk-margin-small">
                      <div class="uk-width-1-1 uk-inline xx-login-input">
                        <span class="uk-form-icon uk-form-icon-flip" uk-icon="icon: user"></span>
                        <div class="form-group field-vaced2 required">
                          <label class="control-label"  asp-for="Username">Usuario</label>
                          <input type="text" asp-for="Username" class="uk-input indentity required cedula" autofocus autocomplete="off" style="color:black" aria-required="true">
                          <p class="help-block help-block-error"></p>
                        </div>
                      </div>
                    </div>
                    <div class="uk-margin-small">
                      <div class="uk-width-1-1 uk-inline xx-login-input">
                        <span class="uk-form-icon uk-form-icon-flip" uk-icon="icon: lock"></span>
                        <div class="form-group field-loginform-password required">
                          <label class="control-label" asp-for="Password">Contraseña</label>
                          <input asp-for="Password" type="password"  class="uk-input "  aria-required="true">
                          <p class="help-block help-block-error"></p>
                        </div>
                      </div>
                    </div>
                    <div class="uk-margin-small">
                      <button class="uk-align-center uk-button uk-button-default uk-width-1-1">Ingresa a PDE</button>
                      <hr />
                    </div>
                    <div class="uk-margin-small uk-grid-collapse uk-child-width-auto uk-grid" style="display: none">
                      <div class="uk-width-1-2@s uk-margin-small-bottom">
                        <div class="form-group field-loginform-rememberme">
                          <div class="checkbox">
                            <label asp-for="IsPersistent">
                              <input type="checkbox" asp-for="IsPersistent"  class="uk-checkbox" > Recuérdame </label>
                            <p class="help-block help-block-error"></p>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="uk-margin-small uk-grid-collapse uk-child-width-auto uk-grid ">
                      <div class="uk-width-1-2@s uk-margin-small-bottom">
                        <label>
                          <input class="uk-checkbox" type="checkbox" checked style="margin-bottom: 8px"> Recuérdame </label>
                      </div>
                      <div class="uk-width-1-2@s ">

                      </div>
                    </div>
                 
                  </form>
                </div>
              </div>
            </div>
          </div>
        </main>
      </div>
      <div id="layoutAuthentication_footer">
        <footer class="py-4 bg-light mt-auto">
          <div class="container-fluid px-4">
            <div class="d-flex align-items-center justify-content-between small"></div>
          </div>
        </footer>
      </div>
    </div>
